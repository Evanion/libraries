#!/bin/sh

# Run linting only for affected projects
echo "ğŸ” Running linting on affected projects..."
npx nx affected --target=lint --parallel=3

# If no projects are affected, skip linting
if [ $? -eq 0 ]; then
  echo "âœ… Linting passed for affected projects"
else
  echo "âŒ Linting failed for affected projects"
  exit 1
fi
